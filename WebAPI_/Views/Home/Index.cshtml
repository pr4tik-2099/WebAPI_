
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.7.1.js"></script>

<h1>Welcome to the Web API</h1>
<button type="button" id="btn1">Get Data</button>
<div id="data">

</div>
<h2>Index</h2>

<script>
    $(document).ready(function () {
        $("#btn1").click(function () {
            $.getJSON('/api/StudentAPI', function (response) {
                $.each(response, function (key, value) {
                    var item = "<h3>" + value + "<h3>";
                    $(item).appendTo('#data');
                })
            })
        })
    });
</script>

